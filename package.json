{
  "name": "webapp-boilerplate",
  "version": "0.0.1",
  "description": "A web boilerplate with Next.js, Express & Auth",
  "repository": "https://github.com/xpander001/webapp-boilerplate",
  "author": "Ander Suarez <me@andersuarez.com>",
  "license": "GNU GPLv3",
  "private": true,
  "scripts": {
    "dev": "node server/app.js",
    "lint": "eslint .",
    "precommit": "lint-staged",
    "prepush": "lint-staged",
    "build": "next build",
    "start": "NODE_ENV=production node server/app.js",
    "heroku-postbuild": "yarn build"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "express": "^4.16.3",
    "next": "^7.0.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "styled-components": "^3.4.2"
  },
  "devDependencies": {
    "babel-plugin-styled-components": "^1.5.1",
    "eslint": "^5.4.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2"
  }
}
